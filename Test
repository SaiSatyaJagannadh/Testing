LogScraperProject/
│
├── filecreation.py                   # RUN THIS FIRST - Creates entire structure
│
├── main.py                           # Main entry point (run after filecreation.py)
│
├── requirements.txt                  # Python dependencies
│
├── README.md                         # Project documentation
│
├── .gitignore                        # Git ignore file
│
├── config.yaml                       # OPTIONAL config (defaults in code)
│
├── src/
│   ├── __init__.py
│   │
│   ├── extractors/
│   │   ├── __init__.py
│   │   └── zip_extractor.py         # Extract ZIP + read log files
│   │
│   ├── parsers/
│   │   ├── __init__.py
│   │   └── log_parser.py            # Parse timestamps + errors
│   │
│   ├── processors/
│   │   ├── __init__.py
│   │   └── log_processor.py         # Orchestrates extraction and parsing
│   │
│   ├── exporters/
│   │   ├── __init__.py
│   │   └── excel_exporter.py        # Export to Excel format
│   │
│   └── utils/
│       ├── __init__.py
│       └── config_loader.py         # Load config + file operations
│
└── data/
    ├── input/                        # Place ZIP files here
    └── output/                       # Excel files generated here





"""
File Creation Script for LogScraperProject
Usage: python filecreation.py
"""
from pathlib import Path


def create_project_structure():
    base_dir = Path("LogScraperProject")
    
    # Create directories
    directories = [
        base_dir,
        base_dir / "src",
        base_dir / "src" / "extractors",
        base_dir / "src" / "parsers",
        base_dir / "src" / "processors",
        base_dir / "src" / "exporters",
        base_dir / "src" / "utils",
        base_dir / "data" / "input",
        base_dir / "data" / "output",
    ]
    
    for directory in directories:
        directory.mkdir(parents=True, exist_ok=True)
        print(f"✓ Created: {directory}")
    
    # Create empty __init__.py files
    init_files = [
        base_dir / "src" / "__init__.py",
        base_dir / "src" / "extractors" / "__init__.py",
        base_dir / "src" / "parsers" / "__init__.py",
        base_dir / "src" / "processors" / "__init__.py",
        base_dir / "src" / "exporters" / "__init__.py",
        base_dir / "src" / "utils" / "__init__.py",
    ]
    
    for init_file in init_files:
        init_file.touch()
        print(f"✓ Created: {init_file}")
    
    print("\n✓ PROJECT STRUCTURE CREATED!")
    print("\nNext steps:")
    print("1. Copy all .py files into LogScraperProject/")
    print("2. cd LogScraperProject")
    print("3. pip install -r requirements.txt")
    print("4. Place ZIP files in data/input/")
    print("5. python main.py")


if __name__ == "__main__":
    create_project_structure()
